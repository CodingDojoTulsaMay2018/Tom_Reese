@{
    ViewData["Title"] = "Home Page";
}
<div class="box">
    @if (Convert.ToString(TempData["img"]) == "smile"){
        <img src="~/images/smile.png" alt="">
    <div class="result">@TempData["msg"]</div>

    }
    @if(Convert.ToString(TempData["img"]) == "dead"){
        <img src="~/images/lose.png" alt="">
        <div class="result">@TempData["msg"]</div>

        <form asp-action="Reset" asp-controller="Home" method="post">
            <button class="btn btn-danger" type="submit">Reset</button>
        </form>
    }
    @if(Convert.ToString(TempData["img"]) == "win"){
        <img src="~/images/win.png" alt="">
        <div class="result">@TempData["msg"]</div>

        <form asp-action="Reset" asp-controller="Home" method="post">
            <button class="btn btn-success" type="submit">Reset</button>
        </form>
    }
</div>

    <div class="buttons" ><form asp-action="Feed" asp-controller="Home" method="post">
    <button class="btn btn-primary" type="submit">Feed</button>
    </form>
    <form asp-action="Play" asp-controller="Home" method="post">
        <button class="btn btn-success" type="submit">Play</button>
    </form>
    <form asp-action="Work" asp-controller="Home" method="post">
        <button class="btn btn-info" type="submit">Work</button>
    </form>
    <form asp-action="Sleep" asp-controller="Home" method="post">
        <button class="btn btn-warning" type="submit">Sleep</button>
    </form>
    <form asp-action="Reset" asp-controller="Home" method="post">
        <button class="btn btn-danger" type="submit">Reset</button>
    </form></div>
     


